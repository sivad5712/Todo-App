{
  "name": "echo-todo-assessment",
  "version": "1.0.0",
  "description": "Full-stack Todo Application - Monorepo with Backend (Node.js/Express/TypeScript) and Frontend (React/Vite/Redux Toolkit)",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ..",
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "preview:frontend": "cd frontend && npm run preview",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "rm -rf backend/dist frontend/dist backend/node_modules frontend/node_modules node_modules",
    "clean:modules": "rm -rf backend/node_modules frontend/node_modules node_modules"
  },
  "keywords": [
    "todo",
    "monorepo",
    "fullstack",
    "typescript",
    "react",
    "express",
    "redux-toolkit",
    "vite",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YOUR_USERNAME/echo-todo-assessment.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/echo-todo-assessment/issues"
  }
}
